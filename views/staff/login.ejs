<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="./stylesheets/login.css">

<!-- <div class="container"> -->
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <img src="images/loctech.png" alt="" class="company-logo">
            <div class="card shadow">
                <!-- <img src="https://images.pexels.com/photos/734983/pexels-photo-734983.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="" class="card-img-top"> -->
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <h6 class="text-muted">Enjoy Your Meal!</h6>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" placeholder="username" autofocus required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn login-btn btn-block">Login</button>
                          </div>
                    
                    </form>
                </div>
            </div>
            <p class="mt-4 text-center">New to the App? <a href="/register" class="fw-bold login-register-link">Join now</a></p>
        </div>
    </div>
<!-- </div> -->