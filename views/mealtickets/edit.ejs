<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Meal Ticket</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-body">
        <form action="/mealtickets/<%= mealTicket.ticket_id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="ticket_id">Ticket ID:</label>
                <input class="form-control mb-1" type="text" id="ticket_id" name="mealticket[ticket_id]" placeholder="Ticket Id" value = "<%= mealTicket.ticket_id %>" required>
                <div class="valid-feedback mb-1">Looks good!</div>
                <input class="btn btn-dark btn-sm" type="submit" id="generateID" value="Generate Ticket ID" formaction="">
    
                <!-- <a href="/mealticket/newId">Generate Ticket ID</a> -->
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="holder">Ticket Owner:</label>
                <input class="form-control" type="text" id="holder" name="mealticket[holder]" placeholder="Ticket Holder" value="<%= mealTicket.holder %>" required>
                <!-- <select name="mealticket[holder]" id="holder">
                    //dynamically populate the list of all staff
                </select> -->
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div>
                <input type="text" id="requestDate" name="mealticket[requestDate]" placeholder="Request Date" value="" hidden>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Ticket</button>
            </div>
        </form>
        <a href="/mealtickets/<%= mealTicket.ticket_id %>">Back to meal ticket</a>
        <script src="/script.js"></script>
    </div>
    </div>
    </div>
</div>
